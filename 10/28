 $[t_c,1].$\n","versions":[{"version":"v1","created":"Tue, 28 Oct 2008 09:27:19 GMT"},{"version":"v2","created":"Sat, 13 Dec 2008 16:10:52 GMT"}],"update_date":"2008-12-15"}
