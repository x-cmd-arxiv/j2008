hysical theory.\n","versions":[{"version":"v1","created":"Wed, 9 Apr 2008 23:47:44 GMT"},{"version":"v2","created":"Wed, 16 Apr 2008 17:03:15 GMT"},{"version":"v3","created":"Wed, 23 Apr 2008 18:49:58 GMT"},{"version":"v4","created":"Wed, 23 Apr 2008 23:54:38 GMT"},{"version":"v5","created":"Sun, 11 May 2008 07:00:25 GMT"}],"update_date":"2008-11-26"}
